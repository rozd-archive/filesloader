import inhul.managers.filesystem.FLGroup;/** * @author max * @description * @version 1.0 */class inhul.managers.filesystem.summary.GroupsCollection extends Array {	public static var $version:Number = 1.0;	public static var $className:String = "inhul.managers.filesystem.summary.GroupsCollection";	function GroupsCollection() {		super();		EventDispatcher.initialize(this);	}	//-----------------------------Main methods--------------------------------	public function addGroup(group:FLGroup):Boolean {		for(var i:Number=0; i<this.length; i++){			if(this[i] == group){				return false;			}		}		group.priority = this.length;		this.push(group);		return true;	}	public function removeGroup(group:FLGroup):Boolean {		for(var i:Number=0; i<this.length; i++){			if(this[i] == group){				this.splice(i, 1);				return true;			}		}		return false;	}	public function addMandatoryGroup(group:FLGroup):Void {		group.priority = -1;		this.push(group);		this.sort();	}	public function getNextGroup():FLGroup {		for(var i:Number=0; i<this.length; i++){			if(!FLGroup(this[i]).isLoaded){				return FLGroup(this[i]);			}		}	}	public function push(value:Object):Number {		for(var i:Number=0; i<this.length; i++){			if(this[i] == value){				return this.length;			}		}		return super.push(value);	}	public function sort():Void {		super.sort(range);		for(var i:Number=0; i<this.length; i++){			this[i].priority = i;		}	}	private function range(a:Object, b:Object):Number {		if(a.priority < b.priority){			return -1;		}else if(a.priority > b.priority){			return 1;		}else{			return 0;		}	}	public function toString():String {		var output:String = "";;		output += "+------GroupsCollection-------"+newline;		for(var i:Number=0; i<this.length; i++){			output += "| "+i+": "+this[i]+newline;		}		output += "+------GroupsCollection-------";		return output;	}	//-----------------------------Main methods--------------------------------	//---------