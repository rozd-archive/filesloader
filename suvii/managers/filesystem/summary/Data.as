/** * @author sas * @description * @version 1.0 */class inhul.managers.filesystem.summary.Data extends LoadVars{	public static var $version:Number = 1.0;	public static var $className:String = "inhul.managers.filesystem.summary.Data";	public static var GET:String = "GET";	public static var POST:String = "POST";	public var method:String = POST;	public var data:Array;	function Data(method:String, request:String) {		super();		this.method = (method==GET || method==POST) ? method : POST;		if(Boolean(request) && request.indexOf("?") != -1){			var pairs:Array = request.split("?")[1].split("&");			for(var i:Number=0; i<pairs.length; i++){				var name:String = pairs[i].split("=")[0];				var value:String = pairs[i].split("=")[1];				this[name] = value;			}		}		this.data = [];	}	//-----------------------------Main methods--------------------------------	public function addParam(name:String, value:Object):Void {		this[name] = value;		this.data.push({			name:name,			value:value		});	}	public function getParamByName(name:String):Object {		for(var i:Number=0; i<this.data.length; i++){			if(this.data[i].name == name){				return this.data[i].value;			}		}	}	public function get request():String {		var result:String = "";		for(var i:Number=0; i<this.data.length; i++){			result += this.data[i].name+"="+this.data[i].value+"&";		}		return result;	}	public function toString():String {		return this.request;	}	//-----------------------------Main methods--------------------------------	//-----------------------------Handlers------------------------------------	//-----------------------------Handlers------------------------------------	//-----------------------------User interaction----------------------------	//-----------------------------User interaction----------------------------}